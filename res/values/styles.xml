<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Style per righe delle Liste -->
    <style name="rowstyle">
        <item name="android:background">@drawable/row_background</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/baseTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- Styles generici per i testi in giro nell'app -->
    <style name="baseTextStyle">
        <item name="android:textSize">@dimen/baseTextSize</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="titleTextStyle" parent="baseTextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <!-- Style per bottoni. Utile generatore online: http://angrytools.com/android/button/ -->
    <style name="buttonStyle" parent="@style/identitytoolkit_button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<it.polimi.frontend.util.DateSlider.SliderContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <it.polimi.frontend.util.DateSlider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="it.polimi.frontend.util.DateSlider.labeler.MonthYearLabeler"
        app:labelerFormat="%tb %tY"
        app:childWidth="90dp"
        />
    <it.polimi.frontend.util.DateSlider.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="it.polimi.frontend.util.DateSlider.labeler.DayDateLabeler"
        app:labelerFormat="%td %ta"
        app:childWidth="45dp"
        />
    <include layout="@layout/dialogbuttons"/>
</it.polimi.frontend.util.DateSlider.SliderContainer>
